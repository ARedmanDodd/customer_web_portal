<% include ../partials/contract_header %>
<div class="body">
    <div class="container">
        <div class="row">
            <div class="col-9">
                <h2 class="display-4">
                    <%= client.NAME %>
                </h2>
                <p class="lead">Working in partnership with Dodd Group</p>
            </div>
            <div class="col-3">
                <img class="dodd-client-logo" src="/img/Property_care.png">
            </div>
        </div>
        <hr class="my-3">
        <div class="row">
            <div class="col-4">
                <div class="row">
                    <div class="col-12">
                        <h4>Property</h4>
                        <hr class="my-3">
                        <strong>Address:</strong>
                        <p>
                            <% if(property.ADDRESS1){ %> <%= property.ADDRESS1 %><br> <% } %>
                            <% if(property.ADDRESS2){ %> <%= property.ADDRESS2 %><br> <% } %>
                            <% if(property.ADDRESS3){ %> <%= property.ADDRESS3 %><br> <% } %>
                            <% if(property.ADDRESS4){ %> <%= property.ADDRESS4 %><br> <% } %>
                            <% if(property.POST_CODE){ %> <%= property.POST_CODE %> <% } %>
                        </p>
                        <strong>Reference:</strong>
                        <p><%= user.HRN_Number %></p>
                    </div>
                </div>
            </div>
            <div class="col-4">
                <div class="row">
                    <div class="col-12">
                        <h4>Personal Details:</h4>
                        <hr class="my-3">
                        <strong>Name:</strong>
                        <p>
                            <%= user.firstName %> <%= user.surname %>
                        </p>
                        <strong>Email Address:</strong>
                        <p>
                            <%= user.email %>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-4">
                <h4>Change details:</h4>
                <form class="form" action="#" method="POST">
                    <div class="form-group">
                        <label class="form-label"><strong>Password:</strong></label>
                        <input class="form-control" type="password" name="password" required>
                    </div>
                    <div class="form-group">
                        <label class="form-label"><strong>Confirm Password:</strong></label>
                        <input class="form-control" type="password" name="confirmPass" required>
                    </div>
                    <button type="submit" class="btn btn-info btn-sm">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>

<% include ../partials/contract_footer %>