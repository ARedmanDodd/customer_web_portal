<% include ../../partials/header %>

<div id="dodd-home" class="h-100">
    <div class="row justify-content-center h-100">
        <div class="col-12 my-auto">
            <div class="jumbotron">
                <h1 class="display-4">Add a new FAQ:</h1>
                <hr>
                <p class="lead">This for is development use only.</p>
                <form action="#" method="POST" class="form pad-20">
                    <div class="row justify-content-md-center">
                        <div class="col-12">
                            <div class="form-group form-row">
                                <label for="faqQ" class="form-label">Question:</label>
                                <input type="text" class="form-control" placeholder="FAQ question..." name="faqQ"
                                    id="faqQ">
                            </div>
                            <div class="form-group form-row">
                                <label class="form-label" for="faqA">Answer:</label>
                                <textarea class="form-control" placeholder="Answer to the FAQ question..." id="faqA"
                                    name="faqA"></textarea>
                            </div>
                            <button class="btn btn-info btn-sm mg-20" type="submit">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<% include ../../partials/footer %>