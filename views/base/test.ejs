<% include ../partials/header %>
<div class="row">
    <div class="col-12">
        <div class="help-header">
            <h2>
                General Search
            </h2>
            <p class="lead">
                General data search
            </p>
            <form class="form" action="/test" method="POST">
                <div class="form-group">
                    <label class="form-label">amount</label>
                    <input class="form-control" type="text" placeholder="10" name="amount" required>
                </div>
                <div class="form-group">
                    <label class="form-label">Table</label>
                    <input class="form-control" type="text" placeholder="SALES_ACCOUNTS" name="table" required>
                </div>
                <div class="form-group">
                    <label class="form-label">Field</label>
                    <input class="form-control" type="text" placeholder="PROPERTY_REFERENCE" name="field" required>
                </div>
                <div class="form-group">
                    <label class="form-label">Data</label>
                    <input class="form-control" type="text" placeholder="C71866" name="data" required>
                </div>
                <button class="btn btn-info" type="submit">Submit</button>
            </form>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="help-header">
            <h2>Table Serach</h2>
            <p class="lead">
                Search for a column in all tables
            </p>
            <form class="form" action="/test/column" method="POST">
                <div class="form-group">
                    <label class="form-label">Column Name</label>
                    <input class="form-control" type="text" placeholder="SALES_ACCOUNT" name="reference">
                </div>
                <button class="btn btn-info" type="submit">Submit</button>
            </form>
        </div>
    </div>
</div>
<% include ../partials/footer %>