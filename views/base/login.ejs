<% include ../partials/header %>

<div id="dodd-home" class="h-100">
    <div class="row justify-content-center h-100">
        <div class="col-12 my-auto">
            <div class="jumbotron">
                <h1 class="display-4">Log In:</h1>
                <hr>
                <p class="lead">You will automatically be redirected to you previous page.</p>
                <form action="/login" method="POST" class="form pad-20">
                    <div class="form-group row">
                            <label for="username" class="col-sm-2 col-form-label col-form-label-sm">Username:</label>
                            <div class="col-sm-12">
                                <input id="username" class="form-control form-control-sm" name="username" type="text">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="password" class="col-sm-2 col-form-label col-form-label-sm">Password:</label>
                            <div class="col-sm-12">
                                <input id="password" class="form-control form-control-sm" type="password" name="password">
                            </div>
                        </div>
                        <button class="btn btn-sm btn-success" type="submit">Log In</button>
                </form>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>